<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<Pane fx:controller="com.dylanhelps.fxpress.Controller" styleClass="form-group"
      xmlns:fx="http://javafx.com/fxml"  >
    <VBox>
        <HBox>
            <Label styleClass="form-control">From (currency symbol):</Label>
            <TextField styleClass="form-control" fx:id="fromEditText" />
        </HBox>
        <HBox>
            <Label styleClass="form-control">To (Currency symbol):</Label>
            <TextField fx:id="toEditText" styleClass="form-control" />
        </HBox>
        <Button fx:id="searchBtn" styleClass="form-control" onAction="#handleSearch" >
        GET RATES
        </Button>
        <TextArea fx:id="displayResult" />
    </VBox>
</Pane>